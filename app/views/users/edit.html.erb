<h1>アカウント情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %> 
          <%= f.label :name %>
          <%= f.text_field :name %>
          
          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :Profile %>
          <%= f.text_area :Profile %>
          
          <%= f.label :area %>
          <%= f.text_field :area %>
          
      <%= f.submit "Save", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
